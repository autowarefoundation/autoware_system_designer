{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Module Entity Schema 0.2.1",
  "description": "Schema for autoware_system_design_format module entities",
  "type": "object",
  "required": ["name"],
  "properties": {
    "autoware_system_design_format": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "base": {
      "type": "string"
    },
    "override": {
      "type": "object",
      "additionalProperties": true
    },
    "remove": {
      "type": "object",
      "additionalProperties": true
    },
    "instances": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "entity"],
        "properties": {
          "name": {
            "type": "string"
          },
          "entity": {
            "type": "string"
          },
          "launch": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    },
    "external_interfaces": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "input": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": {
                    "type": "string"
                  }
                },
                "additionalProperties": true
              }
            },
            "output": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": {
                    "type": "string"
                  }
                },
                "additionalProperties": true
              }
            },
            "parameter": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": true
              }
            }
          },
          "additionalProperties": true
        },
        {
          "type": "array"
        }
      ]
    },
    "connections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from", "to"],
        "properties": {
          "from": {
            "type": "string"
          },
          "to": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true,
  "if": {
    "not": {
      "required": ["base"]
    }
  },
  "then": {
    "required": ["instances", "external_interfaces", "connections"]
  }
}
