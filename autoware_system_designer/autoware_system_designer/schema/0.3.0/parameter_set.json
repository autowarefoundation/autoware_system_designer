{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Parameter Set Entity Schema 0.3.0",
  "description": "Schema for autoware_system_design_format parameter_set entities",
  "type": "object",
  "required": ["name", "parameters"],
  "properties": {
    "autoware_system_design_format": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "base": {
      "type": "string"
    },
    "override": {
      "type": "object",
      "additionalProperties": true
    },
    "remove": {
      "type": "object",
      "additionalProperties": true
    },
    "parameters": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["node"],
        "properties": {
          "node": {
            "type": "string"
          },
          "param_files": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": true
            }
          },
          "param_values": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name"],
              "properties": {
                "name": {
                  "type": "string"
                }
              },
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": false
      }
    },
    "local_variables": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
