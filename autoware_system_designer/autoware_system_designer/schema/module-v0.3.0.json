{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Module Entity Schema v0.3.0",
  "description": "Schema for autoware_system_design_format module entities",
  "type": "object",
  "required": ["name"],
  "properties": {
    "autoware_system_design_format": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "base": {
      "type": "string"
    },
    "override": {
      "type": "object",
      "additionalProperties": true
    },
    "remove": {
      "type": "object",
      "additionalProperties": true
    },
    "instances": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "entity"],
        "properties": {
          "name": {
            "type": "string"
          },
          "entity": {
            "type": "string"
          },
          "launch": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    },
    "inputs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "connections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from", "to"],
        "properties": {
          "from": {
            "type": "string"
          },
          "to": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true,
  "if": {
    "not": {
      "required": ["base"]
    }
  },
  "then": {
    "required": ["instances", "inputs", "outputs", "connections"]
  }
}
